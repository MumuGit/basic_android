<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/source_img_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/created_img_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/take_photo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_btn_orange"
            android:padding="10dp"
            android:text="take photo"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/choose_image_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_btn_orange"
            android:padding="10dp"
            android:text="choose photo"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/image_format_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/jpg_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jpg"
            android:textColor="@color/colorPrimaryDark"/>

        <RadioButton
            android:id="@+id/png_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="png"
            android:textColor="@color/colorPrimaryDark"/>

        <RadioButton
            android:id="@+id/webp_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="webp"
            android:textColor="@color/colorPrimaryDark"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/save_image_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_btn_orange"
            android:padding="10dp"
            android:text="save"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/show_image_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_btn_orange"
            android:padding="10dp"
            android:text="show"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>
